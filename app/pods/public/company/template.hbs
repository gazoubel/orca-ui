<div class="container">
  <div class="row">
    <div class="absolute-center is-responsive">
      <div class="panel panel-default">
        <div class="panel-heading">{{companyAcronym}}</div>
        <div class="panel-body">
          <form {{action "doSignIn" email password on="submit"}}>
            <label for="email">Email</label>
            {{input value=email class="form-control"}}
            <label for="password">Password</label>
            {{input value=password type="password" class="form-control"}}
            <button type="submit" class="btn btn-success btn-lg btn-block" style="margin-top: 15px">Sign in</button>
          </form>
        </div>
        <div class="panel-footer">
        </div>
      </div>
    </div>
  </div>
</div>
