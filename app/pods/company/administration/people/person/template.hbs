<section class="content-header" >
  <h1>
    {{t 'product.administration.people.person.title'}}
  </h1>
    <ol class="breadcrumb">
      {{#link-to "company.administration.people" tagName="li"}}
        <a href="#"><i class="fa fa-dashboard"></i>{{t 'product.administration.people.title'}}</a>
