<h2>{{t 'product.administration.menu.people'}}<small></small></h2>
{{#show-on-click  modelIsInValid=modelIsInValid
    onCloseClicked="closeAddPanel" onAddClicked="add" itemAdded=newPerson }}
  <div class="form-group {{if modelIsInValid "has-error"}}">
    <label for="firstNameInput">{{t 'fields.first_name'}}</label>
    {{input value=newPerson.firstName class="form-control" id="firstNameInput" }}

    <label for="lastNameInput">{{t 'fields.last_name'}}</label>
    {{input value=newPerson.lastName class="form-control" id="lastNameInput" }}
  </div>
{{/show-on-click}}

<div class="box" style="margin-top: 5px">
  <div class="box-body no-padding">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>{{t 'fields.name'}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |person|}}
          {{#link-to 'company.administration.people.person' person.id tagName="tr"}}
            <td>{{person.firstName}}</td>
            <td>{{person.lastName}}</td>
            {{#if person.companyRelationship.user}}
            <td>Has User</td>
            {{else}}
            <td>No User</td>
            {{/if}}
          {{/link-to}}
        {{/each}}
    </tbody>
  </table>
  </div>
</div>
