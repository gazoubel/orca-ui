<div class ="row" style="margin-top: 30px">

  <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
    <div class="info-box {{if project.isOnTrack "bg-green" "bg-red"}}">
      <span class="info-box-icon"><i class="fa fa-flag-o"></i></span>

      <div class="info-box-content">
        <span class="info-box-text">Target Health</span>
        <span class="info-box-text">{{if project.isOnTrack (t 'product.projects.project.stages.stage.on_track') (t 'product.projects.project.stages.stage.above_budget')}}</span>

        {{#if project.isOnTrack}}
          <div class="progress">
            <div class="progress-bar" style="width: {{project.percentageSpent}}%"></div>
          </div>
              <span class="progress-description">
                {{format-number project.percentageSpent fallback='0' maximumFractionDigits=2}}%
              </span>
        {{/if}}
      </div>
    </div>
  </div>

  <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
    <div class="info-box">
      <!-- <div class="box-header">Summary</div> -->
        <div class="box-body no-padding">
          <table style="width:100%;margin-top:5px;">
            <tbody>
              <tr>
                <td style="text-align:right;width:50%;padding-right:5px;"><b>{{t 'product.projects.project.stages.stage.estimated_total'}}:</b></td>
                <td>{{format-currency project.predictedTotal fallback='n/a'}}</td>
              </tr>
              <tr>
                <td style="text-align:right;padding-right:5px;"><b>{{t 'product.commonWords.total'}}:</b></td>
                <td>{{format-currency project.totalSpent fallback='n/a'}}</td>
              </tr>
              <tr>
                <td style="text-align:right;padding-right:5px;"><b>{{t 'product.projects.project.stages.stage.total_payments'}}:</b></td>
                <td>{{format-currency project.totalPayments fallback='n/a'}}</td>
              </tr>
              <tr>
                <td style="text-align:right;padding-right:5px;"><b>{{t 'product.projects.project.stages.stage.total_purchase'}}:</b></td>
                <td>{{format-currency project.totalPurchase fallback='n/a'}}</td>
              </tr>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
    <div class="small-box bg-yellow">
      <div class="inner">
        <h3>{{t 'product.projects.project.main_info'}}</h3>
        <p>{{t 'product.projects.project.main_info_subtext'}}</p>
      </div>
      <div class="icon">
        <i class="ion ion-ios-list-outline"></i>
      </div>
      {{#link-to "company.projects.project.info" tagName="a" class="small-box-footer"}}
        {{t 'product.commonWords.more_info'}} <i class="fa fa-arrow-circle-right"></i>
      {{/link-to}}
    </div>
  </div>
  <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
    <div class="small-box bg-purple">
      <div class="inner">
        <h3>{{t 'fields.assignee'}}</h3>
        <p>{{project.assignee.name}}</p>
      </div>
      <div class="icon">
        <i class="ion ion-person"></i>
      </div>
      {{#link-to "company.projects.project.info" tagName="a" class="small-box-footer"}}
        {{t 'product.commonWords.more_info'}} <i class="fa fa-arrow-circle-right"></i>
      {{/link-to}}
    </div>
  </div>
  <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
    <div class="small-box bg-aqua">
      <div class="inner">
        <h3>{{project.activeOrClosedStages}} of {{project.projectStages.length}}</h3>
        <p>{{t 'product.projects.project.stages_progress'}}</p>
      </div>
      <div class="icon">
        <i class="ion ion-ios-albums-outline"></i>
      </div>
      {{#link-to "company.projects.project.stages" tagName="a" class="small-box-footer"}}
        {{t 'product.commonWords.more_info'}} <i class="fa fa-arrow-circle-right"></i>
      {{/link-to}}
    </div>
  </div>
  <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
    <div class="small-box bg-green">
      <div class="inner">
        <h3>{{project.teamMembers.length}}</h3>
        <p>{{t 'product.projects.project.team_members'}}</p>
      </div>
      <div class="icon">
        <i class="ion ion-person-stalker"></i>
      </div>
      {{#link-to "company.projects.project.team" tagName="a" class="small-box-footer"}}
        {{t 'product.commonWords.more_info'}} <i class="fa fa-arrow-circle-right"></i>
      {{/link-to}}
    </div>
  </div>
</div>
