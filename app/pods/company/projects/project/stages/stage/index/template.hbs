<div class="row">
  {{dashboard-info-card
    class="col-lg-4 col-md-4 col-sm-6 col-xs-12"
    title="Stage Health"
    subTitle=(if projectStage.isOnTrack (t 'product.projects.project.stages.stage.on_track') (t 'product.projects.project.stages.stage.above_budget'))
    icon='fa fa-flag-o'
    color=(if projectStage.isOnTrack "bg-green" "bg-red")
    displayProgress=projectStage.isOnTrack
    progress= projectStage.percentageSpent
    progressDescription=(concat (format-number projectStage.percentageSpent fallback='0' maximumFractionDigits=2) '%')}}
  <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
    <div class="info-box">
        <div class="box-body no-padding">
          <table style="width:100%;margin-top:5px;">
            <tbody>
              <tr>
                <td style="text-align:right;width:50%;padding-right:5px;"><b>{{t 'product.projects.project.stages.stage.estimated_total'}}:</b></td>
                <td>{{format-currency projectStage.predictedTotal fallback='n/a'}}</td>
              </tr>
              <tr>
                <td style="text-align:right;padding-right:5px;"><b>{{t 'product.commonWords.total'}}:</b></td>
                <td>{{format-currency projectStage.total fallback='n/a'}}</td>
              </tr>
              <tr>
                <td style="text-align:right;padding-right:5px;"><b>{{t 'product.projects.project.stages.stage.total_payments'}}:</b></td>
                <td>{{format-currency projectStage.totalPayments fallback='n/a'}}</td>
              </tr>
              <tr>
                <td style="text-align:right;padding-right:5px;"><b>{{t 'product.projects.project.stages.stage.total_purchase'}}:</b></td>
                <td>{{format-currency projectStage.totalPurchase fallback='n/a'}}</td>
              </tr>
            </tbody>
          </table>
        </div>

    </div>
  </div>
</div>
<div class ="row">
    {{dashboard-basic-card
      class="col-lg-4 col-md-4 col-sm-6 col-xs-12"
      title=(t 'product.projects.project.stages.main_info')
      subTitle=(t 'product.projects.project.stages.main_info_subtext')
      moreInfoRoute="company.projects.project.stages.stage.info"
      icon='ion-ios-list-outline'
      color='bg-yellow'}}

    {{dashboard-basic-card
      class="col-lg-4 col-md-4 col-sm-6 col-xs-12"
      title=projectStage.quantityOfTotalItems
      subTitle=(t 'product.projects.project.stages.stage.purchased_items')
      moreInfoRoute="company.projects.project.stages.stage.items.purchases"
      icon='fa fa-shopping-cart'
      color='bg-aqua'}}

    {{dashboard-basic-card
      class="col-lg-4 col-md-4 col-sm-6 col-xs-12"
      title=projectStage.quantityOfPaymentItems
      subTitle=(t 'product.projects.project.stages.stage.payment_items')
      moreInfoRoute="company.projects.project.stages.stage.items.payments"
      icon='fa fa-bank'
      color='bg-green'}}
</div>
