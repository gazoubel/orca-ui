{{#link-to 'company.projects.new'}}
<button class="btn btn-default">
  <i class="glyphicon glyphicon-plus"></i>
  {{t 'product.projects.new_project'}}
</button>
{{/link-to}}
<a class="pull-right" style="padding-top:10px;" {{action "toggleShowAll"}}>{{#if showAll}}show active only{{else}}show all{{/if}}</a>
<div class="box" style="margin-top: 5px">
  <div class="box-body no-padding">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>{{t 'fields.name'}}</th>
          <th>{{t 'fields.total_spent'}}</th>
          <th>{{t 'fields.totalClosingAmount'}}</th>
          <th>{{t 'fields.predicted_total'}}</th>
          <th>{{t 'fields.finished_stages'}}</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each displayProjects as |project|}}
          {{#link-to 'company.projects.project' project.id tagName="tr"}}
            <td>{{project.name}}</td>
            <td>{{format-currency project.totalSpent fallback='n/a'}}</td>
            <td>{{format-currency project.totalClosingAmount fallback='n/a'}}</td>
            <td>{{format-currency project.predictedTotal fallback='n/a'}}</td>
            <td>{{project.finishedStages}} of {{project.projectStages.length}}</td>
            <td>
              {{#if project.canBeClosed}}
                {{#if project.isActive}}
                  <button type="submit" class="btn btn-default" {{action "closeProject" project bubbles=false}}>{{t 'fields.close_projects'}}</button>
                {{else if project.wasVeryProfitable}}
                  Good Standing
                {{else if project.wasProfitable}}
                  Close call
                {{else}}
                  Not Profitable
                {{/if}}
              {{/if}}
            </td>
          {{/link-to}}
        {{/each}}
    </tbody>
  </table>
  </div>
</div>
