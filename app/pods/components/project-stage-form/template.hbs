<form  class="form-horizotal" role="form" {{action "save" projectStage on="submit"}}>
  <div class="row">
    {{#orca-dropdown-label
      classNames="col-sm-12"
      validation=projectStage.validations.attrs.stage
      options=allStages
      selected=projectStage.stage
      onchange=(action (mut projectStage.stage))
      placeholder = (t 'product.projects.project.stages.stage.basic_stage')
      displayText=(t 'product.projects.project.stages.stage.basic_stage')
      as |stage|}}
        {{stage.name}}
    {{/orca-dropdown-label}}
  </div>
  <div class="row">
    {{orca-input-with-label field = projectStage.name displayText=(t 'fields.name')
     classNames="col-sm-12" validation=projectStage.validations.attrs.name}}
  </div>
  <div class="row">
    {{orca-input-currency-with-label field = projectStage.predictedTotal displayText=(t 'fields.predicted_total')
      classNames="col-sm-12" validation=projectStage.validations.attrs.predictedTotal numeric="true" scale="2"}}
  </div>
  <!-- <div class="row">
    <div class="form-group">
      <div class="pull-right" style="margin-top: 20px;padding-right:20px;">
        <button class="btn btn-default" {{action "cancel" projectStage}}>{{t 'fields.cancel'}}</button>
        <button type="submit" class="btn btn-default">{{t 'fields.save'}}</button>
      </div>
    </div>
  </div> -->
  <div class="box-footer">
    <!-- <div class="pull-right"> -->
      <button type="submit" class="btn btn-default pull-right">{{t 'fields.save'}}</button>
      <button class="btn btn-default pull-right" style="margin-right: 5px;" {{action "cancel" projectStage}}>{{t 'fields.cancel'}}</button>
    <!-- </div> -->
  </div>
</form>
