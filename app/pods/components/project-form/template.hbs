<form  class="form-horizotal" role="form" {{action "save" project on="submit"}}> <!-- horizontal form -->
  <div class="row">
    {{orca-input-with-label field = project.name displayText=(t 'fields.name')
     classNames="col-sm-12" validation=project.validations.attrs.name}}
  </div>
  <div class="row">
    {{orca-input-currency-with-label field = project.totalClosingAmount displayText=(t 'fields.totalClosingAmount')
      classNames="col-sm-12" validation=project.validations.attrs.totalClosingAmount numeric="true" scale="2"}}
  </div>

  <div class="box-footer">
    <button type="submit" class="btn btn-default pull-right">{{t 'fields.save'}}</button>
    <button class="btn btn-default pull-right" style="margin-right: 5px;" {{action "cancel" project}}>{{t 'fields.cancel'}}</button>
  </div>
</form>
