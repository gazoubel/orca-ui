<form  class="form-horizotal" role="form" {{action "save" purchaseTransactionItem on="submit"}}> <!-- horizontal form -->
  <div class="row">
    {{orca-input-with-label field = purchaseTransactionItem.name displayText=(t 'fields.name')
     classNames="col-sm-12" validation=purchaseTransactionItem.validations.attrs.description}}
  </div>
  <div class="box-footer">
    <button type="submit" class="btn btn-default pull-right">{{t 'fields.save'}}</button>
    <button class="btn btn-default pull-right" style="margin-right: 5px;" {{action "cancel" purchaseTransactionItem}}>{{t 'fields.cancel'}}</button>
  </div>
</form>
