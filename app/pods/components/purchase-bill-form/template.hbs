<form  class="form-horizotal" role="form" {{action "save" purchaseBill on="submit"}}> <!-- horizontal form -->
  <div class="row">
    {{#orca-dropdown-label
      classNames="col-sm-12"
      validation=purchaseBill.validations.attrs.provider
      options=allProviders
      selected=purchaseBill.provider
      onchange=(action (mut purchaseBill.provider))
      placeholder = (t 'product.transactions.transaction.provider')
      displayText=(t 'product.transactions.transaction.provider')
      as |provider|}}
        {{provider.name}}
    {{/orca-dropdown-label}}

    {{orca-input-date-with-label field = purchaseBill.purchaseDate
    displayText=(t 'fields.purchase_date')
    classNames="col-sm-12"
    validation=purchaseBill.validations.attrs.purchaseDate}}

    {{orca-input-with-label field = purchaseBill.description displayText=(t 'fields.description')
    classNames="col-sm-12" validation=purchaseBill.validations.attrs.description}}

    {{orca-input-with-label field = purchaseBill.invoiceNumber displayText=(t 'fields.invoiceNumber')
    classNames="col-sm-12" validation=purchaseBill.validations.attrs.invoiceNumber}}

    {{#orca-dropdown-label
      classNames="col-sm-12"
      options=allProjects
      selected=selectedProject
      onchange=(action (mut selectedProject))
      placeholder = (t 'product.transactions.transaction.project')
      displayText=(t 'product.transactions.transaction.project')
      as |project|}}
        {{project.name}}
    {{/orca-dropdown-label}}

    {{#orca-dropdown-label
      classNames="col-sm-12"
      validation=purchaseBill.validations.attrs.defaultProjectStage
      options=selectedProject.projectStages
      selected=purchaseBill.defaultProjectStage
      onchange=(action (mut purchaseBill.defaultProjectStage))
      placeholder = (t 'product.transactions.transaction.project_stage')
      displayText=(t 'product.transactions.transaction.project_stage')
      as |stage|}}
       {{stage.name}}
    {{/orca-dropdown-label}}


    {{orca-input-date-with-label field = purchaseBill.paymentDueDate
    displayText=(t 'fields.payment_due_date')
    classNames="col-sm-12"
    validation=purchaseBill.validations.attrs.paymentDueDate}}


    <!-- {{orca-input-date-with-label field = purchaseBill.transactionPaidOn
    displayText=(t 'fields.payment_paid_date')
    classNames="col-sm-12"
    validation=purchaseBill.validations.attrs.transactionPaidOn}} -->

    {{orca-input-currency-with-label field = purchaseBill.tax displayText=(t 'product.commonWords.tax')
    classNames="col-sm-12" validation=purchaseBill.validations.attrs.tax }}

    {{orca-input-currency-with-label field = purchaseBill.total displayText=(t 'product.commonWords.total')
    classNames="col-sm-12" validation=purchaseBill.validations.attrs.total}}

    {{#orca-dropdown-label
      classNames="col-sm-12"
      validation=purchaseBill.validations.attrs.paymentType
      options=allPaymentTypes
      selected=purchaseBill.paymentType
      onchange=(action (mut purchaseBill.paymentType))
      placeholder = (t 'product.transactions.transaction.payment_type')
      displayText=(t 'product.transactions.transaction.payment_type')
      as |paymentType|}}
        {{paymentType.name}}
    {{/orca-dropdown-label}}

  </div>
  <div class="box-footer">
    <button type="submit" class="btn btn-default pull-right">{{t 'fields.save'}}</button>
    <button class="btn btn-default pull-right" style="margin-right: 5px;" {{action "cancel" purchaseBill}}>{{t 'fields.cancel'}}</button>
  </div>
</form>
