<form  class="form-horizotal" role="form" {{action "save" newPaymentTransaction on="submit"}}> <!-- horizontal form -->
  <div class="row">

    {{orca-input-date-with-label field = newPaymentTransaction.transactionPaidOn
    displayText=(t 'fields.payment_paid_date')
    classNames="col-sm-12"}}

    {{orca-input-currency-with-label field = newPaymentTransaction.total displayText=(t 'product.commonWords.total')
    classNames="col-sm-12"}}

    {{#orca-dropdown-label
      classNames="col-sm-12"
      options=allPaymentTypes
      selected=newPaymentTransaction.paymentType
      onchange=(action (mut newPaymentTransaction.paymentType))
      placeholder = (t 'product.transactions.transaction.payment_type')
      displayText=(t 'product.transactions.transaction.payment_type')
      as |paymentType|}}
        {{paymentType.name}}
    {{/orca-dropdown-label}}

  </div>
  <div class="box-footer">
    <button type="submit" class="btn btn-default pull-right">{{t 'fields.save'}}</button>
    <button class="btn btn-default pull-right" style="margin-right: 5px;" {{action "cancel" newPaymentTransaction}}>{{t 'fields.cancel'}}</button>
  </div>
</form>
